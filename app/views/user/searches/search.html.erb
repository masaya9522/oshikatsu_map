<div class="container">
  <div class='row'>
    <table class="table border table-hover table-inverse">
      <% if @result == [] %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% elsif @item.present? %>
      <% search_word = @q.introduction %>
    <h2 class="mt-3">検索結果 "<%= search_word %>"</h2>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @item.each do |f| %>
          <td><%= image_tag post.image %></td>
          <td><%= post.introduction %></td>
        </tr>
        <% end %>
      <% else %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% end %>
    </table>
  </div>
</div>